= form_for resource_info do |f|
  -if resource_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(resource_info.errors.count, "error")} prohibited this resource_info from being saved:"
      %ul
        - resource_info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label '资源地址'
    = f.text_area :url
  .actions
    = f.submit '添加',:class=>'btn'
    -if !f.object.new_record?
      =link_to "返回", mine_resource_infos_path,:class=>'btn'
